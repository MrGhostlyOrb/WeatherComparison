// layout
doctype html
html(lang='en')
	head
		meta(http-equiv='X-UA-Compatible', content='text/html', charset='UTF-8')
		title Weather App: #{ title }
		link(type = 'text/css' rel = 'Stylesheet' href = '/styles/style.css')
		link(rel='manifest' href='/manifest.json')
		link(type = 'text/css' rel = 'Stylesheet' href = '/styles/css2.css')
		meta(name='viewport' content='width=device-width, initial-scale=1.0')
		meta(name='description' content='Little Workouts Web App')
		meta(name='theme-color' content='#8aacc8')
		script(defer src='/scripts/app.js')
		script if ('serviceWorker' in navigator) {window.addEventListener('load', () => {navigator.serviceWorker.register('/service-worker.js').then((reg) => {console.log('Service worker registered.', reg);});});}
	body
		block content
